@model IEnumerable<Jzm.Rent.WebApp45.Models.DeviceInfo>
@{
    ViewBag.Title = "ShowDevice";
    Layout = "~/Views/Shared/_LayoutJzmwithDelete.cshtml";
}

<h3><a href="~/DeviceList/AddDevice">Add Device</a> </h3>

<div>
    <table class="table table-hover">
        <thead>
            <tr class="table-success">
                <th>DeviceUID</th>
                <th>DeviceName</th>
                <th>Quantity</th>
                <th>Note</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>OnBoardDate</th>
                <th>UpdateDate</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {

            <tr class="table-secondary">
                <td><a href="~/BorrowList/AddBorrowDevice?id=@item.id">@Html.DisplayFor(modelItem => item.DeviceUID)  </a> </td>

                
                <td>@Html.DisplayFor(modelItem => item.DeviceName)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.Note)</td>
                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                <td>@Html.DisplayFor(modelItem => item.IsDeleted)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedOnUtc)</td>
                <td>@Html.DisplayFor(modelItem => item.UpdateOnUtc)</td>
                <td><a href="~/DeviceList/EditDevice?id=@item.id"><button type="button" class="btn btn-dark disabled">Edit</button></a></td>
                <td><a href="~/DeviceList/DeleteDevice?id=@item.id" onclick="return confirm('Are you sure you want to delete this item?');"><button type="button" class="btn btn-danger btn-sm">Delete</button></a></td>
            </tr>

            }

        </tbody>
    </table>

</div>
