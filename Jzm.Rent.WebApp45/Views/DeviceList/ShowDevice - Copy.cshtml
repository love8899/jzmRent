@model System.Data.DataTable
@using System.Data;
@model IEnumerable<Jzm.Rent.WebApp45.Models.DeviceInfo>
@{
    ViewBag.Title = "ShowDevice";
    Layout = "~/Views/Shared/_LayoutJzmwithDelete.cshtml";
}

<h3><a href="~/DeviceList/AddDevice">Add Device</a></h3>

<div>
    <table class="table table-hover">
        <thead>
            <tr class="table-success">
                <th>DeviceUID</th>
                <th>DeviceName</th>
                <th>Quantity</th>
                <th>Note</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>OnBoardDate</th>
                <th>UpDate</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr class="table-secondary">
                    <td><a href="~/BorrowList/AddBorrowDevice?id=@row["id"]">@row["DeviceUID"]</a> </td>
                    <td>@row["DeviceName"]</td>
                    <td>@row["Quantity"]</td>
                    <td>@row["Note"]</td>
                    <td>@row["IsActive"]</td>
                    <td>@row["IsDeleted"]</td>
                    <td>@row["CreatedOnUtc"]</td>
                    <td>@row["UpdateOnUtc"]</td>

                    <td><a href="~/DeviceList/EditDevice?id=@row["id"]"><button type="button" class="btn btn-dark disabled">Edit</button></a></td>
                    <td><a href="~/DeviceList/DeleteDevice?id=@row["id"]" onclick="return confirm('Are you sure you want to delete this item?');"><button type="button" class="btn btn-danger btn-sm">Delete</button></a></td>

                </tr>
            }
        </tbody>
    </table>

</div>
