@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_LayoutJzmAjx.cshtml";
}
<h2 class="text-success">Add BorrowDevice @Html.ActionLink("(Back to List)", "ShowUsers", "UserList")</h2>

<hr class="mt-3 mb-3" />


<div>
    <form action="~/BorrowList/AddBorrowDeviceByUser" method="post">


        <input type="hidden" name="UserId" value="@ViewBag.userDetails.id" />
        <div class="row">
            <div class="col-sm-4">
                <label class="form-label mt-4">FirstName</label>
                <input type="text" name="FirstName" readonly="" class="form-control-plaintext" id="staticEmail" value="@ViewBag.userDetails.FirstName" />
            </div>

            <div class="col-sm-4">
                <label class="form-label mt-4">LastName</label>

                <input type="text" name="LastName" readonly="" class="form-control-plaintext" value="@ViewBag.userDetails.LastName" />
            </div>
        </div>
        <div><h4 class="text-success">Issue Device</h4></div>
        <hr />

        <div class="row">
            <!--
        <div class="col-sm-4">
            <label class="form-label mt-4">Device UID</label>
            <select name="DeviceUID" id="DeviceUID" class="form-select" required>
                <option value="">--Please choose an option--</option>
            </select>
        </div> -->
            <div class="col-sm-4">
                <label class="form-label mt-4">Device UID</label>
                <input type="text" name="DeviceUID" id="DeviceUID" calss="form-control" oninput="getDeviceByUID()" placeholder="DeviceUID" required />
            </div>

            <div class="col-sm-4">
                <label class="form-label mt-4">DeviceName</label>
                <input type="text" name="DeviceName" id="DeviceName" calss="form-control" readonly="readonly" />
            </div>
            <div class="col-sm-4">
                <label class="form-label mt-4">Stock Quantity</label>
                <input type="text" name="Quantity" id="Quantity" calss="form-control" readonly="readonly" />
            </div>

        </div>


        <div class="row">

            <div class="col-sm-4">
                <div class="form-group">
                    <label>Borrow Date</label>
                    <input type="date" name="BorrowDate" calss="form-control" placeholder="BorrowDate" required />
                </div>
            </div>
            
            <div class="col-sm-4">
                <label class="form-label mt-4">BorrowDays</label>
                <input type="text" name="BorrowDays" calss="form-control" placeholder="BorrowDays" value="1" required />
            </div>
            <div class="col-sm-4">
                    <label class="form-label mt-4">BorrowQuantity</label>
                    <input type="text" name="BorrowQuantity" calss="form-control" placeholder="BorrowQuantity" required />
                </div>

                
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

    </form>
</div>

